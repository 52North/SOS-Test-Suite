    <scm>
        <url>http://github.com/52North/SOS-Test-Suite</url>
        <connection>scm:git:https://github.com/52North/SOS-Test-Suite.git</connection>
        <developerConnection>scm:git:https:://git@github.com/52North/SOS-Test-Suite.git</developerConnection>
        <tag>HEAD</tag>
    </scm>
    <issueManagement>
        <system>GitHub Issue Management</system>
        <url>https://github.com/52North/SOS-Test-Suite/issues</url>
    </issueManagement>
    <licenses>
        <license>
            <name>Eclipse Public License 1.0</name>
            <url>http://www.eclipse.org/legal/epl-v10.html</url>
            <distribution>repo</distribution>
        </license>
    </licenses>
    <properties>
